<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_seleccion_cliente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ii.inge.app.fernando.com.gestor_ventas.ui.SeleccionCliente"
    android:orientation="vertical">


    <TextView
        android:text="Clientes :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_cliente"
        android:textSize="24sp"
        android:textColor="@android:color/background_dark"
        android:textStyle="normal|bold" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spn_clientes"
         />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:text="Nombre :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_nombre"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/txt_mostrarNombre"
            android:layout_height="25dp"
            android:textColor="@android:color/black" />

        <TextView
            android:text="Apellido :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_apellido"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/txt_mostrarApellido"
            android:textColor="@android:color/black" />

        <TextView
            android:text="Dirección :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_direccion"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/txt_mostrarDireccion"
            android:textColor="@android:color/black"/>

        <TextView
            android:text="Teléfono :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_telefono"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/txt_mostrarTelefono"
            android:textColor="@android:color/black" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <Button
            android:text="Hacer Pedido"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/bt_hacerPedido"
            android:layout_gravity="bottom|center_horizontal"
            android:onClick="Pedido" />
    </LinearLayout>
</LinearLayout>
